<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Plugin.XamarinChartJS;assembly=Plugin"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             x:Class="Sample.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout>
                <Label Text="Welcome to Xamarin.ChartJS!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                <Picker x:Name="chartTypePicker" SelectedItem="{Binding SelectedType}" ItemsSource="{Binding Types}" SelectedIndexChanged="OnChartTypeChanged" />
                <!--<Button Text="Change Color" Clicked="ChangeColorTest"/>-->
            </StackLayout>
        </Frame>
        <ScrollView x:Name="pageLayout">
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <views:ChartView x:Name="firstChart" Config="{Binding Config}" WidthRequest="300" HeightRequest="300"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>